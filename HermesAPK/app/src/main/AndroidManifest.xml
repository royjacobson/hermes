<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hermes.hermes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".oneOption"
            android:label="@string/title_activity_one_option"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".twoOption"
            android:label="@string/title_activity_two_option"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".film"
            android:label="@string/title_activity_film"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowInfo"
            android:label="@string/title_activity_show_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
